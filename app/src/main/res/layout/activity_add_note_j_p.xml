<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <data>
        <import type="android.view.View"/>
        <variable
            name="addnoteModel"
            type="com.engfirstapp.abeer.mysecretportfolio.models.AddNoteModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".jetpackportfolio.AddNoteJP"
        android:orientation="vertical">

        <include
            android:id="@+id/add_note_toolbarjp_activity"
            layout="@layout/toolbar_jp"
            app:apptoolbar="@{1}"/>

        <EditText
            android:id="@+id/add_note_editText_jp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="95"
            android:background="@drawable/rosewallpaper"
            android:fontFamily="casual"
            android:gravity="start"
            android:padding="5dp" />
    </LinearLayout>

</layout>