<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/passwordDialog_linearOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/passwordDialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:hint="@string/password" />

    <EditText
        android:id="@+id/passwordDialog_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/passwordDialog_ok"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginVertical="20dp"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:text="@string/ok" />

    </LinearLayout>

    <TextView
        android:id="@+id/passwordDialog_edit_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="5dp"
        android:drawableStart="@drawable/ic_edit_black_24dp"
        android:drawableLeft="@drawable/ic_edit_black_24dp"
        android:drawablePadding="10dp"
        android:text="@string/edit_password"
        android:textSize="18sp"
        android:fontFamily="casual"
        android:textColor="@color/colorPrimary"/>

    <LinearLayout
        android:id="@+id/passwordDialog_linrear_edit"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/passwordDialog_edit_oldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:hint="@string/old_password" />

        <EditText
            android:id="@+id/passwordDialog_edit_newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:hint="@string/new_password" />

        <Button
            android:id="@+id/passwordDialog_edit_ok"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="20dp"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text="@string/ok" />
    </LinearLayout>

</LinearLayout>