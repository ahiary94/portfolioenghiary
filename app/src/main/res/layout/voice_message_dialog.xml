<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="350dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/cardview_dark_background"
                >

                <EditText
                    android:id="@+id/voiceMessage_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="Add title"
                    android:fontFamily="casual"
                    android:paddingStart="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:paddingLeft="10dp" />

                <Button
                    android:id="@+id/voiceMessage_close"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_close"
                    android:layout_marginVertical="7dp"
                    android:backgroundTint="@color/red_dark"
                    />
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                android:src="@drawable/mic2"/>

            <SeekBar
                android:id="@+id/voiceMessage_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray2f"
                android:progressBackgroundTint="@color/red_dark"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/cardview_dark_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/voiceMessage_record"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="10dp"
                   android:background="@drawable/record"
                   />

                <ImageView
                    android:id="@+id/voiceMessage_play"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_play_circle_filled"
                    android:backgroundTint="@color/white"/>

                <ImageView
                    android:id="@+id/voiceMessage_pause"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_pause_circle_filled"
                    android:backgroundTint="@color/white"/>

                <ImageView
                    android:id="@+id/voiceMessage_save"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_save_black_24dp"
                    android:backgroundTint="@color/white"/>

            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>