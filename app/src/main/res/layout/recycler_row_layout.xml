<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:id="@+id/home_container_voice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_voiceMessage_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:hint="Title"
                    android:gravity="center"
                    android:fontFamily="casual"
                    android:paddingStart="10dp"
                    android:textSize="15sp"
                    android:textColorHint="@color/gray_darkf"
                    android:paddingLeft="10dp" />

                <Button
                    android:id="@+id/home_voiceMessage_close"
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:background="@drawable/ic_close"
                    android:backgroundTint="@color/red_dark" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center"
                android:background="@color/cardview_dark_background"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/home_voiceMessage_play"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_play_circle_filled"
                    android:backgroundTint="@color/white"/>

                <Button
                    android:id="@+id/home_voiceMessage_pause"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_pause_circle_filled"
                    android:backgroundTint="@color/white"/>

                <Button
                    android:id="@+id/home_voiceMessage_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_delete_black_24dp"
                    android:backgroundTint="@color/white"/>

            </LinearLayout>
        </LinearLayout>







        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/home_container_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_favorite_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center"
                android:textStyle="bold"
                android:maxLength="10"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/home_add_new_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textView_favorite_title"
                android:fontFamily="casual"
                android:padding="5dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>